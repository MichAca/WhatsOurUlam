<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adobo"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:id="@+id/selectedFoodTextView" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"/>
    <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/wou_logo"
            android:id="@+id/imageView3"
            tools:ignore="MissingConstraints" android:layout_marginTop="48dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintHorizontal_bias="0.498"/>
    <Button
            android:text="Choose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/chooseFoodButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@color/colorPrimary"
            android:textColor="@color/background"
            app:layout_constraintHorizontal_bias="1.0"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Add food here"
            android:ems="10"
            android:id="@+id/addFoodTextView" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/selectedFoodTextView"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintEnd_toStartOf="@+id/addFoodButton"
            app:layout_constraintHorizontal_bias="0.5"
    />
    <Button
            android:text="Add Food"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/addFoodButton"
            style="@style/Widget.AppCompat.Button.Borderless" android:background="@color/background"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/addFoodTextView" app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/selectedFoodTextView"/>

</android.support.constraint.ConstraintLayout>